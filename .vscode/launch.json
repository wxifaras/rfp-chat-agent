    "version": "0.2.0",
    "configurations": [
        {
            "name": "RFP Chat: FastAPI",
            "type": "debugpy",
            "request": "launch",
            "module": "uvicorn",
            "args": [
                "rfp-chat-agent-api.main:app",
                "--reload"
            ],
            "cwd": "${workspaceFolder}/rfp-chat-agent-api",
            "console": "integratedTerminal",
            "justMyCode": false,
            "env": {
                "PYTHONPATH": "${workspaceFolder}"
            }
        }
    ]
}